<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
        <h2>Pro Account</h2>
        <h4>Sign up for the pro account for $5/month and get access to the community and all contact info!</h4>
    <% else %>
        <h2>Basic Account</h2>
        <h4>Sign up for a free account and get access to the community.</h4>
    <% end %>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
          <%= render 'pro_form' %>
      <% else %>
          <%= render 'basic_form' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
